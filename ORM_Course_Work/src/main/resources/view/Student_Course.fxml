<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.Controllers.StudentRegisterController">

    <!-- TableView -->
    <TableView fx:id="tblStudentCourse" layoutX="50.0" layoutY="408.0" prefHeight="121.0" prefWidth="894.0" style="-fx-background-color: white; -fx-border-color: #bdbdbd; -fx-font-size: 16px;">
        <columns>
            <TableColumn fx:id="colStudentId" prefWidth="122.0" text="Student ID" />
            <TableColumn fx:id="colCourseId" prefWidth="154.0" text="Course ID" />
            <TableColumn fx:id="colDate" prefWidth="210.0" text="Date" />
            <TableColumn fx:id="colStudentCourseId" prefWidth="210.0" text="Student Course ID" />
         <TableColumn fx:id="colBatchNumber" prefWidth="210.0" text="Batch Number" />
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button fx:id="btnBack" layoutX="14.0" layoutY="14.0" onAction="#btnBackOnAction" prefHeight="62.0" prefWidth="67.0" style="-fx-background-color: #66366B; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 50;" text="Back">
      <font>
         <Font size="16.0" />
      </font></Button>
    <Label layoutX="277.0" layoutY="18.0" text="Student Registration" textFill="#1943ff" underline="true">
        <font>
            <Font name="Impact" size="36.0" />
        </font>
    </Label>
    <AnchorPane layoutX="790.0" layoutY="139.0" prefHeight="200.0" prefWidth="200.0">
        <children>

            <!-- Action Buttons -->
            <Button fx:id="btnAdd" layoutX="50.0" layoutY="15.0" onAction="#btnAddOnAction" prefHeight="30.0" prefWidth="111.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;" text="Add">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/add_icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnUpdate" layoutX="50.0" layoutY="66.0" onAction="#btnUpdateOnAction" prefHeight="30.0" prefWidth="111.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 16px;" text="Update">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/update_logo.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnDelete" layoutX="50.0" layoutY="116.0" onAction="#btnDeleteOnAction" prefHeight="30.0" prefWidth="111.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px;" text="Delete">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/delete.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnClear" layoutX="50.0" layoutY="163.0" onAction="#btnClearOnAction" prefHeight="30.0" prefWidth="111.0" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 16px;" text="Clear">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/clear_icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </children>
    </AnchorPane>
    <AnchorPane layoutX="54.0" layoutY="84.0" prefHeight="304.0" prefWidth="771.0" style="-fx-background-color: #BCEBC8; -fx-background-radius: 20;">
        <children>

            <!-- Labels for Student and Course Details -->
            <Label layoutX="14.0" layoutY="150.0" style="-fx-text-fill: black;" text="Student Name">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblStudentName1" layoutX="161.0" layoutY="142.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="14.0" layoutY="90.0" style="-fx-text-fill: black;" text="Student ID">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblStudentID" layoutX="161.0" layoutY="82.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="417.0" layoutY="90.0" style="-fx-text-fill: black;" text="Course ID">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblCourseID" layoutX="600.0" layoutY="90.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="418.0" layoutY="132.0" style="-fx-text-fill: black;" text="Fee">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblFee1" layoutX="600.0" layoutY="130.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="14.0" layoutY="208.0" style="-fx-text-fill: black;" text="Payment ID">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblPaymentId1" layoutX="161.0" layoutY="200.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="14.0" layoutY="260.0" style="-fx-text-fill: black;" text="Date">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblDate1" layoutX="161.0" layoutY="252.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="417.0" layoutY="215.0" style="-fx-text-fill: black;" text="Student Course ID">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblStudentCourseId1" layoutX="600.0" layoutY="210.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <Label layoutX="417.0" layoutY="178.0" style="-fx-text-fill: black;" text="Duration">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
            <Label fx:id="lblDuration" layoutX="600.0" layoutY="171.0" prefHeight="30.0" prefWidth="165.0" style="-fx-background-color: #E6BCEB;" />

            <!-- Combo Boxes for Student ID and Course ID -->
            <ComboBox fx:id="cmbStudentPhoneNumber" layoutX="14.0" layoutY="21.0" onAction="#cmbStudentOnAction" prefHeight="30.0" prefWidth="245.0" promptText="Select Student Contact" style="-fx-font-size: 16px;" />
            <ComboBox fx:id="cmbCourseName" layoutX="417.0" layoutY="21.0" onAction="#cmbCourseOnAction" prefHeight="30.0" prefWidth="245.0" promptText="Select Course Name" style="-fx-font-size: 16px;" />
         <Label layoutX="417.0" layoutY="260.0" style="-fx-text-fill: black;" text="Course Batch">
            <font>
               <Font name="Cambria Bold" size="16.0" />
            </font></Label>
         <TextField fx:id="txtBatchNumber" layoutX="600.0" layoutY="253.0" style="-fx-background-color: #E6BCEB;" />
        </children>
    </AnchorPane>

</AnchorPane>
